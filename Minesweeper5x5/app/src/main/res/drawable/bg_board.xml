<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="16dp" />

    <!-- лёгкий зелёный градиент, как игровое поле -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="#8BC34A"
        android:endColor="#C5E1A5" />

    <stroke
        android:width="2dp"
        android:color="#55FFFFFF" />

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
